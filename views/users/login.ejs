<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YelpCamp</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
   <link rel="stylesheet" href="/stylesheets/login.css">
</head>

<body class="d-flex flex-column vh-100">
   <%- include('../partials/navbar') %>
	<div class="container">
		 <%- include('../partials/flash') %>
	</div>
   
   <main class="container">
	  <div class="row">
		  <div class="col-12">
			  <div class="card shadow neat px-4 neat">
				 <h2 class="cardtitle mt-4">
					 Sign into your account
				  </h2>
				  <form action="/login" method="POST" novalidate class="validated-form">

					<div class="mb-3">
						<label class="form-label" for="username">Username:</label>
						<input class="form-control" type="text" id="username" name="username" placeholder="username" required>
						<div class="valid-feedback">
							Looks good!
						</div>
					</div>

					<div class="mb-3">
						<label class="form-label" for="password">Password:</label>      <a href="/reset" class="text-info 
							text-decoration-none float-end">forgot your password?</a>
						<input class="form-control" type="password" id="password" name="password" placeholder="password" required>
						<div class="valid-feedback">
							Looks good!
						</div>
					</div>
					
                    <div class="d-grid ">
                            <button type="submit" class="btn btn-success btn-lg my-3" type="button">Login</button>
                    </div>
					
					<p class="text-center">
						 Don't have an account ? <a class="text-decoration-none" href="/register">Sign up</a>
					</p>

                 </form>
			  </div>
			    <!-- <p class="text-white">
					  Don't have an account ? <a href="/register">Sign up</a>
				</p> -->
		  </div>
	   </div>
   </main>
	
    <%- include('../partials/footer') %> 
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
        integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
        crossorigin="anonymous"></script>
	
	<script src='/javascripts/validateForms.js'></script>
</body>

</html>



